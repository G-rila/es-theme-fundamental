<theme>
	<formatVersion>4</formatVersion>
	<include>./../fundamental.xml</include>
	
	<view name="system, basic, grid">
		<image name="logo">
			<path>./logo.svg</path>
		</image>
	</view>
	
	<feature supported="carousel">
		<view name="system">	
			<image name="console" extra="true">
				<path>./console.png</path>
			</image>
	
			<text name="console_notes" extra="true">
				<text>The NAOMI (New Arcade Operation Machine Idea) is the successor to the Sega Model 3. Sega first demonstrated NAOMI publicly at the 1998 Amusement Machine Show (an annual trade show hosted in Tokyo by the Japan Amusement Machinery Manufacturers Association). After the show, Sega released the first NAOMI title to the Japanese market: The House of the Dead 2.</text>
			</text>
		
			<text name="release_date" extra="true">
				<text>Release Date: Varies</text>
			</text>
			
			<text name="developer" extra="true">
				<text>Developer: Sega</text>
			</text>
			
			<text name="cpu" extra="true">
				<text>CPU: Hitachi SH-4 @ 200 MHz</text>
			</text>
			
			<text name="memory" extra="true">
				<text>Memory: 32 MB</text>
			</text>
			
			<text name="graphics" extra="true">
				<text>Graphics: NEC-VideoLogic PowerVR 2</text>
			</text>
			
			<text name="sound" extra="true">
				<text>Sound: Yamaha AICA</text>
			</text>
			
			<text name="media" extra="true">
				<text>Media: ROM board</text>
			</text>
		</view>
	</feature>
	
</theme>