<?xml version="1.0" encoding="UTF-8"?>
<!--
theme name:		Fundamental (residualvm)
version:		2.0
author:			Juliano Dorigão
-->

<theme>
	<formatVersion>4</formatVersion>
	<include>./../fundamental.xml</include>

	<view name="system, basic, grid">
		<image name="logo">
			<path>./logo.png</path>
		</image>
	</view>

	<feature supported="carousel">
		<view name="system">
			<image name="console" extra="true">
				<path>./console.png</path>
			</image>

			<text name="console_notes" extra="true">
				<text>ResidualVM is a cross-platform 3D game interpreter which allows you to play LucasArts' Lua-based 3D adventures: Grim Fandango and Escape from Monkey Island, provided you already have their data files. ResidualVM just replaces the executables shipped with the games, allowing you to play them on systems for which they were never designed!</text>
			</text>

			<text name="release_date" extra="true">
				<text>Release Date: August 15, 2003</text>
			</text>

			<text name="developer" extra="true">
				<text>Developer: ResidualVM Team</text>
			</text>

			<text name="cpu" extra="true">
				<text>Type: Interpreter</text>
			</text>

			<text name="memory" extra="true">
				<text>Written in: C++</text>
			</text>
		</view>
	</feature>

</theme>
