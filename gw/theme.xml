<?xml version="1.0" encoding="UTF-8"?>
<!--
theme name:		Fundamental (gw)
version:		2.0
author:			Juliano Dorigão
-->

<theme>
	<formatVersion>4</formatVersion>
	<include>./../fundamental.xml</include>
	
	<view name="system, basic, detailed, grid, video">
		<image name="logo">
			<path>./logo.svg</path>
		</image>
	</view>
	
	<feature supported="carousel">
		<view name="system">	
			<image name="console" extra="true">
				<path>./console.png</path>
			</image>
	
			<text name="console_notes" extra="true">
				<text>Game & Watch (Japanese: ゲーム&ウオッチ Gēmu & Uotchi; called Tricotronic in West Germany and Austria) was a line of handheld electronic games produced by Nintendo from 1980 to 1991. Created by game designer Gunpei Yokoi, each Game & Watch features a single game to be played on an LCD screen in addition to a clock, an alarm, or both. It was the earliest Nintendo product to gain major success.</text>
			</text>
		
			<text name="release_date" extra="true">
				<text>Release Date: April 28, 1980</text>
			</text>
			
			<text name="developer" extra="true">
				<text>Developer: Nintendo R&D1</text>
			</text>
			
			<text name="cpu" extra="true">
				<text>CPU: Sharp SM5xx family</text>
			</text>
			
			<text name="memory" extra="true">
				<text>Memory:</text>
			</text>
			
			<text name="graphics" extra="true">
				<text>Graphics: Liquid-crystal display</text>
			</text>
			
			<text name="sound" extra="true">
				<text>Sound:</text>
			</text>
			
			<text name="media" extra="true">
				<text>Media:</text>
			</text>
		</view>
	</feature>
	
</theme>