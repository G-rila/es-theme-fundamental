<?xml version="1.0" encoding="UTF-8"?>
<!--
theme name:		Fundamental (BBC Micro)
version:		2.0
author:			Grila
-->

<theme>
	<formatVersion>4</formatVersion>
	<include>./../fundamental.xml</include>
	
	<view name="system, basic, detailed, grid, video">
		<image name="logo">
			<path>./logo.png</path>
		</image>
	</view>
	
	<feature supported="carousel">
		<view name="system">	
			<image name="console" extra="true">
				<path>./console.png</path>
			</image>
	
			<text name="console_notes" extra="true">
				<text>The BBC Microcomputers were a family of home computers manufactured by Acorn for the BBC.</text>
			</text>
		
			<text name="release_date" extra="true">
				<text>Release Date: 1 December 1981</text>
			</text>
			
			<text name="developer" extra="true">
				<text>Developer: Acorn</text>
			</text>
			
			<text name="cpu" extra="true">
				<text>CPU: 2 MHz MOS Technology 6502/6512</text>
			</text>
			
			<text name="memory" extra="true">
				<text>Memory: 16 kB minimum, up to 96 kB</text>
			</text>
			
			<text name="graphics" extra="true">
				<text>Graphics: 256×192 (16 colours)</text>
			</text>
			
			<text name="sound" extra="true">
				<text>Sound: SN76489</text>
			</text>
			
			<text name="media" extra="true">
				<text>Media: 	Cassette tape, floppy disk (optional) – 5.25? (common) (SS/SD, SS/DD, DS/SD, DS/DD), 3.5? (rare) (SS/DD, DS/DD), hard disk also known as 'Winchester' (rare), Laserdisc (BBC Domesday Project)</text>
			</text>
		</view>
	</feature>
	
</theme>