<theme>
	<formatVersion>4</formatVersion>
	<include>./../fundamental.xml</include>

	<view name="system, basic, detailed, grid, video">
		<image name="logo">
			<path>./logo.png</path>
		</image>
	</view>

	<feature supported="carousel">
		<view name="system">
			<image name="console" extra="true">
				<path>./console.png</path>
			</image>

			<text name="console_notes" extra="true">
				<text>Pygame is a cross-platform set of Python modules designed for writing video games. It includes computer graphics and sound libraries designed to be used with the Python programming language.</text>
			</text>
		</view>
	</feature>

</theme>
