<?xml version="1.0" encoding="UTF-8"?>
<!--
theme name:		Fundamental (sufami)
version:		2.0
author:			Juliano Dorigão
-->

<theme>
	<formatVersion>4</formatVersion>
	<include>./../fundamental.xml</include>

	<view name="system, basic, grid">
		<image name="logo">
			<path>./logo.svg</path>
		</image>
	</view>

	<feature supported="carousel">
		<view name="system">
			<image name="console" extra="true">
				<path>./console.png</path>
			</image>

			<text name="console_notes" extra="true">
				<text>The SuFami Turbo (スーファミターボ), often compared to the Aladdin Deck Enhancer, is an accessory released by Bandai for Nintendo's Super Famicom system and was released in 1996.</text>
			</text>

			<text name="release_date" extra="true">
				<text>Release Date: June 28, 1996</text>
			</text>

			<text name="developer" extra="true">
				<text>Developer: Bandai</text>
			</text>

			<text name="cpu" extra="true">
				<text>Media: Cartridge</text>
			</text>
		</view>
	</feature>

</theme>
