<theme>
	<formatVersion>4</formatVersion>
	<include>./../fundamental.xml</include>

	<view name="system, basic, detailed, grid, video">
		<image name="logo">
			<path>./logo.png</path>
		</image>
	</view>

	<feature supported="carousel">
		<view name="system">
			<image name="console" extra="true">
				<path>./console.png</path>
			</image>

			<text name="console_notes" extra="true">
				<text>The X1 (?????? Ekkusuwan), sometimes called the Sharp X1, is a series of home computers released by Sharp Corporation from 1982 to 1988. It was based on a Z80 CPU.</text>
			</text>

			<text name="release_date" extra="true">
				<text>Release Date: 1982</text>
			</text>

			<text name="developer" extra="true">
				<text>Developer: Sharp Corporation</text>
			</text>

			<text name="cpu" extra="true">
				<text>CPU: Sharp Z80 A</text>
			</text>

			<text name="memory" extra="true">
				<text>Memory: 64 KB RAM, 4-48KB Video RAM, 6KB ROM</text>
			</text>

			<text name="graphics" extra="true">
				<text>Graphics: 320 x 200 / 640 x 200</text>
			</text>

			<text name="sound" extra="true">
				<text>Sound: 320 x 200 / 640 x 200</text>
			</text>

			<text name="media" extra="true">
				<text>Media: Floppy disk</text>
			</text>
		</view>
	</feature>

</theme>
