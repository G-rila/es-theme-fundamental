<?xml version="1.0" encoding="UTF-8"?>
<!--
theme name:		Fundamental (amiga3000)
version:		2.0
author:			Juliano Dorigão
-->

<theme>
	<formatVersion>4</formatVersion>
	<include>./../fundamental.xml</include>

	<view name="system, basic">
		<image name="logo">
			<path>./logo.svg</path>
		</image>
	</view>

	<feature supported="carousel">
		<view name="system">
			<image name="console" extra="true">
				<path>./console.png</path>
			</image>

			<text name="console_notes" extra="true">
				<text>The Commodore Amiga 3000, or A3000, is the third major release in the Amiga computer family. Released in June 1990, it features improved processing speed, improved rendering of graphics, and a new revision of the operating system. It is the successor to the Amiga 2000.</text>
			</text>

			<text name="release_date" extra="true">
				<text>Release Date: June 1990</text>
			</text>

			<text name="developer" extra="true">
				<text>Developer: Commodore</text>
			</text>

			<text name="cpu" extra="true">
				<text>CPU: Motorola 68030 @ 16 or 25 MHz</text>
			</text>

			<text name="memory" extra="true">
				<text>Memory: 2 MB</text>
			</text>

			<text name="graphics" extra="true">
				<text>Graphics: 12-bit color palette</text>
			</text>

			<text name="sound" extra="true">
				<text>Sound: 4× 8-bit PCM channels </text>
			</text>

			<text name="media" extra="true">
				<text>Media: 880 KB floppy disks</text>
			</text>
		</view>
	</feature>

</theme>
