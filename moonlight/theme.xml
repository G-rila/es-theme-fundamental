<theme>
	<formatVersion>4</formatVersion>
	<include>./../fundamental.xml</include>
	
	<view name="system, basic, detailed, grid, video">
		<image name="logo">
			<path>./logo.svg</path>
		</image>
	</view>
	
	<feature supported="carousel">
		<view name="system">	
			<image name="console" extra="true">
				<path>./console.png</path>
			</image>
	
			<text name="console_notes" extra="true">
				<text>Moonlight Embedded is an open source implementation of NVIDIA's GameStream, as used by the NVIDIA Shield, but built for Linux.

Moonlight Embedded allows you to stream your full collection of games from your powerful Windows desktop to your (embedded) Linux system, like Raspberry Pi, CuBox-i and ODROID.</text>
			</text>
		
			<text name="release_date" extra="true">
				<text>Release Date:</text>
			</text>
			
			<text name="developer" extra="true">
				<text>Developer: irtimmer</text>
			</text>
			
			<text name="cpu" extra="true">
				<text>CPU:</text>
			</text>
			
			<text name="memory" extra="true">
				<text>Memory:</text>
			</text>
			
			<text name="graphics" extra="true">
				<text>Graphics:</text>
			</text>
			
			<text name="sound" extra="true">
				<text>Sound:</text>
			</text>
			
			<text name="media" extra="true">
				<text>Media:</text>
			</text>
		</view>
	</feature>
	
</theme>