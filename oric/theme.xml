<?xml version="1.0" encoding="UTF-8"?>
<!--
theme name:		Fundamental (retropie)
version:		2.0
author:			Grila
-->

<theme>
	<formatVersion>4</formatVersion>
	<include>./../fundamental.xml</include>
	
	<view name="system, basic, detailed, grid, video">
		<image name="logo">
			<path>./logo.png</path>
		</image>
	</view>
	
	<feature supported="carousel">
		<view name="system">	
			<image name="console" extra="true">
				<path>./console.png</path>
			</image>
	
			<text name="console_notes" extra="true">
				<text>Based on a MOS 1 MHz 6502A CPU, the Oric-1 came in 16 KB or 48 KB RAM variants for £129 and £169 respectively, matching the models available for the popular ZX Spectrum and undercutting the price of the 48 KB version of the Spectrum by a few pounds.</text>
			</text>
		
			<text name="release_date" extra="true">
				<text>Release Date: September 1, 1982</text>
			</text>
			
			<text name="developer" extra="true">
				<text>Developer: 	Tangerine Computer Systems</text>
			</text>
			
			<text name="cpu" extra="true">
				<text>CPU: 	6502A @ 1 MHz</text>
			</text>
			
			<text name="memory" extra="true">
				<text>Memory: 16 KB / 48 KB</text>
			</text>
			
			<text name="graphics" extra="true">
				<text>Graphics: Varies</text>
			</text>
			
			<text name="sound" extra="true">
				<text>Sound: Varies</text>
			</text>
			
			<text name="media" extra="true">
				<text>Media: Cassette tape, Floppy disk</text>
			</text>
		</view>
	</feature>
	
</theme>