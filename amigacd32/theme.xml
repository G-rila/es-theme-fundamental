<?xml version="1.0" encoding="UTF-8"?>
<!--
theme name:		Fundamental (amigacd32)
version:		2.0
author:			Juliano Dorigão
-->

<theme>
	<formatVersion>4</formatVersion>
	<include>./../fundamental.xml</include>

	<view name="system, basic, grid">
		<image name="logo">
			<path>./logo.svg</path>
		</image>
	</view>

	<feature supported="carousel">
		<view name="system">
			<image name="console" extra="true">
				<path>./console.png</path>
			</image>

			<text name="console_notes" extra="true">
				<text>The Amiga CD32, styled Amiga CD32 and code-named "Spellbound", is a 32 bit home video game console developed by Commodore and released in western Europe, Australia, Canada and Brazil. It was first announced at the Science Museum in London on July 16, 1993, and was released in September of the same year.</text>
			</text>

			<text name="release_date" extra="true">
				<text>Release Date: September 17, 1993</text>
			</text>

			<text name="developer" extra="true">
				<text>Developer: Commodore International</text>
			</text>

			<text name="cpu" extra="true">
				<text>CPU: Motorola 68EC020</text>
			</text>

			<text name="memory" extra="true">
				<text>Memory: 2 MB Chip RAM</text>
			</text>

			<text name="graphics" extra="true">
				<text>Graphics: 24-bit colour palette</text>
			</text>

			<text name="sound" extra="true">
				<text>Sound: 4× 8-bit PCM channels Stereo</text>
			</text>

			<text name="media" extra="true">
				<text>Media: CD-ROM</text>
			</text>
		</view>
	</feature>

</theme>
